<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NourishNaviGit.AIPage"
             BackgroundImageSource="background.png">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <!-- Add UI elements to display the AI response here -->
            <Label x:Name="GeneratedResponseTextBlock"
                   Text="AI Response Will Appear Here"
                   FontSize="16"
                   TextColor="#131b1c"
                   HorizontalOptions="Center" />


            <Button
                 x:Name="ViewIngredients"
                 Text="View Ingredients"
                 BackgroundColor="DarkGoldenrod"
                 SemanticProperties.Hint="Displays all ingredients needed"
                 Margin="5"
                 Padding="10,5"
                 HorizontalOptions="End"  />
            <!--Clicked="OnIngredientsButton_Clicked"/>-->
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>